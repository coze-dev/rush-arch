{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "@coze-arch/ts-config/tsconfig.web.json",
  "compilerOptions": {
    "strict": true,
    "useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "strictNullChecks": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "allowImportingTsExtensions": false,
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "composite": true,
    "declaration": true,
    "incremental": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "types": [],
    "paths": {
      "@/*": ["./src/*"]
    },
    "rootDir": "./src",
    "outDir": "./dist/types",
    "tsBuildInfoFile": "dist/types/tsconfig.build.tsbuildinfo"
  },
  "exclude": ["**/*.test.*", "**/stories/", "node_modules"],
  "include": ["src"],
  "references": [
    {
      "path": "../arco-icon/tsconfig.build.json"
    },
    {
      "path": "../arco-illustration/tsconfig.build.json"
    },
    {
      "path": "../semi-theme-hand01/tsconfig.build.json"
    }
  ]
}
